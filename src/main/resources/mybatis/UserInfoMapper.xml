<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sansan.tool.api.user.mapper.UserInfoMapper">

    <resultMap id="userInfoResult" type="com.sansan.tool.api.entity.user.UserInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="pass_word" property="passWord" jdbcType="VARCHAR"/>
        <result column="add_time" property="addTime" jdbcType="TIMESTAMP"/>
        <result column="last_update_time" property="lastUpdateTime" jdbcType="TIMESTAMP"/>
        <result column="delete_status" property="deleteStatus" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="userInfoSql">
        id,
        user_name,
        pass_word,
        add_time,
        last_update_time,
        delete_status
    </sql>

    <select id="getUserInfo" resultMap="userInfoResult" parameterType="map">
        select
          <include refid="userInfoSql"/>
        from api_user
        where delete_status = 0
    </select>

</mapper>